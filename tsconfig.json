{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./lib",
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2018"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "strict": true,
        "declaration": true
    },
    "include": ["lib/*.ts"],
    "exclude": ["node_modules", "dist"]
}